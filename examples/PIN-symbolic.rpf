if(!require("DEoptim")){
	install.packages("DEoptim", repos="http://cran.us.r-project.org")
}
library("DEoptim")
rpf <- function(prob) {
	p <- prob[1]
	r1 <- prob[2]
	r2 <- prob[3]
	if(p<0) return (Inf)
	if(p>1) return (Inf)
	if((1-p)<0) return (Inf)
	if((1-p)>1) return (Inf)
	return (r1/(1-p)+r2)
}
set.seed(1234)
DEoptim(rpf,lower=c(0,0,1),upper=c(1,0,1), control=list(storepopfrom=0, trace=FALSE))
